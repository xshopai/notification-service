{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Dapr Sidecar",
      "type": "shell",
      "command": "dapr",
      "args": [
        "run",
        "--app-id",
        "notification-service",
        "--app-port",
        "8011",
        "--dapr-http-port",
        "3500",
        "--dapr-grpc-port",
        "50001",
        "--resources-path",
        ".dapr/components",
        "--config",
        ".dapr/config.yaml",
        "--log-level",
        "warn"
      ],
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      },
      "problemMatcher": {
        "owner": "dapr",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting Dapr",
          "endsPattern": "You're up and running"
        }
      }
    },
    {
      "label": "Stop Dapr Sidecar",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-Command",
        "Get-Process -Name daprd -ErrorAction SilentlyContinue | Stop-Process -Force -ErrorAction SilentlyContinue; Write-Host 'Stopped Dapr sidecar processes'"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      }
    }
  ]
}
