# =============================================================================
# Notification Service Configuration
# =============================================================================

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=development
PORT=1011
NAME=notification-service
VERSION=1.0.0

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/notification-service.log

# =============================================================================
# Dapr Configuration
# =============================================================================
DAPR_HOST=localhost
DAPR_HTTP_PORT=3500
DAPR_GRPC_PORT=50001
DAPR_APP_ID=notification-service
DAPR_PUBSUB_NAME=event-bus

# =============================================================================
# Email Configuration
# =============================================================================
EMAIL_ENABLED=true
EMAIL_PROVIDER=smtp
EMAIL_FROM_NAME=xshopai Notifications
EMAIL_FROM_ADDRESS=noreply@xshopai.local
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false

