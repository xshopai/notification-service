# Notification Service - Local Development Configuration (without Dapr)
# Copy this file to .env for local development WITHOUT Dapr

# =============================================================================
# Service Configuration
# =============================================================================
NODE_ENV=development
PORT=1009
NAME=notification-service
VERSION=1.0.0

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=console
LOG_TO_CONSOLE=true
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/notification-service.log

